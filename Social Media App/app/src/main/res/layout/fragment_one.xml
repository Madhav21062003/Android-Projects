<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.FragmentOne">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white">

        <ImageButton
            android:id="@+id/ib_menu_f1"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_menu_24"
            android:background="@color/white"
            android:layout_gravity="left|center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY PROFILE"
            android:textColor="@color/my_red"
            android:layout_margin="10dp"
            android:textStyle="bold"
             android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/ib_edit_f1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"

            android:src="@drawable/baseline_edit_24"
            android:background="@color/white"
            android:layout_gravity="right|center_vertical"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardPreventCornerOverlap="false"
            android:layout_gravity="center_vertical"
            android:elevation="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/iv_f1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@drawable/baseline_person_24"
                android:scaleType="fitCenter"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_f1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:hint="Name"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:gravity="start"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tv_prof_f1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:hint="Profession"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="#4B4949"
                android:gravity="start"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="PRIMARY DETAILS"
        android:textStyle="bold"
        android:background="#A2A0A0"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:padding="5dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:gravity="start"
        android:textSize="15sp"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#343334"
        android:drawablePadding="20dp"/>

    <TextView
        android:id="@+id/tv_bio_f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:drawablePadding="20dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="#343334"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#343334"
        android:drawablePadding="20dp"/>

    <TextView
        android:id="@+id/tv_email_f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:drawablePadding="20dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="#343334"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#343334"
        android:drawablePadding="20dp"/>

    <TextView
        android:id="@+id/tv_web_f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:padding="5dp"
        android:text="website"
        android:textColor="#039BE5"
        android:textSize="15sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="#343334"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_followers_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/baseline_people_24"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_posts_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/baseline_add_photo_alternate_24"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            tools:ignore="UseCompatTextViewDrawableXml" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_addstories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Stories"
        android:textColor="@color/my_red"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:background="@drawable/border_deco"
        android:padding="10dp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sendmessage_f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:background="@drawable/button_back"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

</LinearLayout>