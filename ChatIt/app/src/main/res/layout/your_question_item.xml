<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="35dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/yourQuestion_iv_que_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_person_24"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    tools:ignore="KeyboardInaccessibleWidget" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yourQuestion_time_que_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:hint="time"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:textColor="@color/my_red"/>

            <TextView
                android:id="@+id/yourQuestion_name_que_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:hint="name"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/yourQuestion_que_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:paddingStart="5dp"
                android:hint="Questions"
                android:layout_margin="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/yourQuestion_delete_item_que"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textColor="@color/my_red"
                    android:text="Delete"
                    android:padding="5dp"
                    android:textSize="20sp"/>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

